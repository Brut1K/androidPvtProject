<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.nikul.myapplication.presentation.screens.hw2.Hw2ViewModel"/>
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7295ff"
    android:orientation="vertical">
    <!--android:weightSum="100"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#7295ff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#ff0004"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#ffffff"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#ff0004"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#7295ff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#ff0004" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#7295ff"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#168907" />

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#ff0004" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#7295ff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="#f3f721" />

            <View
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="#0b38c1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#be0407" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#7295ff"
            android:orientation="horizontal">

            <View
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="#ffffff" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="#ff0004" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="99dp"
                    android:background="#168907" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#ff0000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#0000ff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="#ff0000" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#ff0000"
            android:orientation="vertical">

            <View
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="75dp"
                android:background="#fff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="#fff" />

        </RelativeLayout>


        <!--
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:background="#2d59e9"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:background="#f92121"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33"
                android:background="#ffffff"></FrameLayout>
        -->
    </LinearLayout>
</ScrollView>
</layout>